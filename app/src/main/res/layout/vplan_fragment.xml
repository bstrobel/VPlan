<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="?attr/actionBarSize"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context=".VPlanFragment">

    <ListView
        android:id="@+id/listview_vplan"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:paddingLeft="@dimen/zusatzinfo_margin"
        android:paddingRight="@dimen/zusatzinfo_margin"
        android:paddingTop="@dimen/zusatzinfo_margin"
        android:paddingBottom="@dimen/zusatzinfo_margin"
        android:elevation="@dimen/zusatzinfo_elevation"
        android:background="@color/bernd_blue">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textview_zusatzinfo"
            android:textColor="@color/zusinfo_font_color"/>
    </ScrollView>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textview_sync_disabled_warning"
        android:paddingLeft="@dimen/zusatzinfo_margin"
        android:paddingRight="@dimen/zusatzinfo_margin"
        android:paddingTop="@dimen/zusatzinfo_margin"
        android:paddingBottom="@dimen/zusatzinfo_margin"
        android:elevation="@dimen/zusatzinfo_elevation"
        android:visibility="gone"
        android:text="@string/syncDisabledWarning"
        android:textColor="@color/sync_disable_warning_font_color"
        android:background="@color/sync_disable_warning_color"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textview_timestamp_of_last_update"
        android:text="timestamp of last update"
        android:textColor="@color/time_stamp_font_color"
        android:textSize="@dimen/time_stamp_text_size"
        android:textStyle="normal"
        android:typeface="sans" />

</LinearLayout>
